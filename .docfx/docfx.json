{
  "metadata": [
    {
      "src": [
        { 
          "src": "../../..",
          "files": [            
            "GDX.csproj",
            "GDX.Editor.csproj",
            "GDX.Developer.csproj",
            "GDX.Developer.Editor.csproj"
          ]
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": true
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "manual/**.md",
          "manual/**/toc.yml",          
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "logo.svg",
          "favicon.ico",
          "styles/*.css",
          "styles/*.js"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "globalMetadata": {
      "_enableSearch": true,
      "_appTitle": "GDX",
      "_gitContribute": {
        "repo": "https://github.com/dotBunny/GDX",
        "branch": "main",
        "apiSpecFolder": ".docfx/apispec"
      }
    },  
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "templates/gdx"
    ],
    "postProcessors": [],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  }
}